# Copy this file to .env.local and fill in your values.
# .env.local is gitignored and never committed.

# AWS credentials (only needed for local dev — on AWS use IAM roles instead)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here

# DynamoDB table name (create this table in AWS Console first)
# Partition key: email (String)
DYNAMODB_TABLE_NAME=shouldibuy-waitlist

# SES — verified sender address for waitlist confirmation emails
# This address must be verified in AWS SES before use (see SETUP.md)
WAITLIST_FROM_EMAIL=hello@shouldibuythis.io

# Unsubscribe link signing — generate with: openssl rand -hex 32
# Must be the same value across all deployments (don't rotate or old links break)
UNSUBSCRIBE_SECRET=replace_with_a_long_random_secret

# Public base URL — used to build unsubscribe links in emails
APP_URL=https://shouldibuythis.io
